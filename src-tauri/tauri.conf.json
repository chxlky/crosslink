{
	"productName": "crosslink",
	"version": "0.0.1",
	"identifier": "io.github.chxlky",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "crosslink",
				"width": 800,
				"height": 600,
				"label": "main",
				"focus": true,
				"resizable": false,
				"maximizable": false,
				"visible": true,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
